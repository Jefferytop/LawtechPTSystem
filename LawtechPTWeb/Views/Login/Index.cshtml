<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(Content/lan/zh-tw/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box">
                <div id="divloginform">
                    <div class="logo">
                        <span class="db">
                            <img src="/Content/logo-icon-login.png" alt="logo" /></span>
                        <h5 class="font-medium mb-3">Sign In to @WebSystemName</h5>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginform", @class = "form-horizontal mt-3" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                </div>
                                @*<input type="text" class="form-control form-control-lg" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">*@
                                @Html.TextBox("Account",null, new { name = "Account", id = "Account", maxlength = 150, @class = "form-control", placeholder = "Account", tabindex = "1" })
                                @*@Html.TextBoxFor(model => model.Account, new { name = "Account", id = "Account", maxlength = 150, @class = "form-control", placeholder = "Account", tabindex = "1" })*@
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                                </div>
                                @*<input type="text" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">*@
                                @Html.TextBox("Password",null, new { name = "Password", id = "Password", maxlength = 150, @class = "form-control", placeholder = "Password", type = "password", tabindex = "2" })
                                @*@Html.TextBoxFor(model => model.Password, new { name = "Password", id = "Password", maxlength = 150, @class = "form-control", placeholder = "Password", type = "password", tabindex = "2" })*@
                            </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                            @Html.LabelFor(model => model.RememberMe, new { name = "RememberMe", id = "RememberMe", @class = "custom-control-label", @for = "customCheck1" })
                                            @*  <label class="custom-control-label" for="customCheck1">Remember me</label>*@
                                            @*<a href="javascript:void(0)" id="to-recover" class="text-dark float-right"><i class="fa fa-lock mr-1"></i> Forgot pwd?</a>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="button-group text-center">

                                    <button class="btn btn-block btn-lg btn-info" type="submit" id="btnLogin">@*<i class="fa fa-check"></i>*@Log In</button>

                                    @* <button class="btn  btn-lg btn-success" type="reset" id="btnReset"><i class="fas fa-bullseye"></i> Reset</button>*@

                                </div> 
                                
                                <!--
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 mt-2 text-center">
                                        <div class="social">
                                            <a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="" data-original-title="Login with Facebook"> <i aria-hidden="true" class="fab  fa-facebook"></i> </a>
                                            <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="" data-original-title="Login with Google"> <i aria-hidden="true" class="fab  fa-google-plus"></i> </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-0 mt-2">
                                    <div class="col-sm-12 text-center">
                                        Don't have an account? <a href="authentication-register1.html" class="text-info ml-1"><b>Sign Up</b></a>
                                    </div>
                                </div>
                                    -->
                            }
                            <!-- Form End -->
                            @if (@TempData["ErrorString"] != null)
                            {
                                <script>
                                    var msg = '@(TempData["ErrorString"] )';
                                    swal.fire("登入失敗", msg, "error");
                                    //$("#Account").val('');
                                    $("#Password").val('');
                                </script> 
                
                            }
                        </div>
                    </div>
                </div>
